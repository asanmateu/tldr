{
  "name": "tldr-cli",
  "version": "2.0.1",
  "description": "CLI summarization tool optimised for neurodiversity",
  "type": "module",
  "exports": {
    ".": "./src/index.tsx",
    "./core": "./src/lib/core/index.ts"
  },
  "bin": {
    "tldr": "./bin/tldr"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build:darwin-arm64": "bun build src/index.tsx --compile --target=bun-darwin-arm64 --outfile dist/tldr-darwin-arm64",
    "build:darwin-x64": "bun build src/index.tsx --compile --target=bun-darwin-x64 --outfile dist/tldr-darwin-x64",
    "build:linux-x64": "bun build src/index.tsx --compile --target=bun-linux-x64 --outfile dist/tldr-linux-x64",
    "build:linux-arm64": "bun build src/index.tsx --compile --target=bun-linux-arm64 --outfile dist/tldr-linux-arm64",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64 && bun run build:linux-arm64"
  },
  "files": ["src", "bin", "dist"],
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asanmateu/tldr.git"
  },
  "keywords": ["tldr", "summarize", "cli", "accessibility", "dyslexia", "adhd", "claude"],
  "author": "Antonio San Mateu Erralta",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@google/genai": "^1.41.0",
    "@mozilla/readability": "^0.6.0",
    "@notionhq/client": "^5.9.0",
    "@slack/web-api": "^7.14.1",
    "edge-tts-universal": "^1.3.3",
    "ink": "^5.1.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "jsdom": "^26.0.0",
    "openai": "^6.22.0",
    "react": "^18.3.1",
    "unpdf": "^0.12.1",
    "youtube-transcript": "^1.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.3.18",
    "@vitest/coverage-istanbul": "^3.0.0",
    "ink-testing-library": "^4.0.0",
    "lefthook": "^1.9.4",
    "react-devtools-core": "^7.0.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "overrides": {
    "tar": "^7.5.7"
  }
}
